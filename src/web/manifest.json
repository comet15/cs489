{
    "name": "reference tracker",
    "version": "1.0",
    "manifest_version": 2,
    "description": "reference tracker",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Reference tracker",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs",
        "storage"
    ]
}